@model IEnumerable<Sistema_de_Facturacion.Models.Stock>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form action="\Stocks" method="post">
    @Html.TextBox("producto")
    @Html.TextBox("fecha")
    @Html.TextBox("proveedor")
    @Html.CheckBox("sumatoria", false) Sumatoria
    @Html.CheckBox("conteo", false) Conteo
    @Html.CheckBox("promedio", false) Promedio
    <input type="submit" value="BUSCAR" />
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producto.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Proveedore.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proveedore.Nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
<p>Sumatoria total: @ViewBag.Sumatoria</p>
<p>Conteo total: @ViewBag.Conteo</p>
<p>Promedio total: @ViewBag.Promedio</p>
